{
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "declaration": true,
    "removeComments": true,
    "target": "es2018",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node"
  }
}
