{
  "name": "@mongosh/service-provider-core",
  "version": "0.0.0-dev.0",
  "description": "MongoDB Shell Core Service Provider Package",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "config": {
    "unsafe-perm": true
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/mongosh.git"
  },
  "scripts": {
    "compile-ts": "tsc -p tsconfig.json",
    "prepublish": "npm run compile-ts",
    "test": "mocha -r \"../../scripts/import-expansions.js\" --timeout 60000 -r ts-node/register \"./src/**/*.spec.ts\"",
    "test-ci": "node ../../scripts/run-if-package-requested.js npm test",
    "lint": "eslint --report-unused-disable-directives \"./{src,test}/**/*.{js,ts,tsx}\"",
    "check": "npm run lint && depcheck --skip-missing=true"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.4.0"
  },
  "mongosh": {
    "unitTestsOnly": true,
    "ciRequiredOptionalDependencies": {
      "mongodb-client-encryption": ["darwin", "linux", "win32"]
    }
  },
  "dependencies": {
    "@mongosh/errors": "0.0.0-dev.0",
    "bson": "^4.6.2",
    "mongodb": "^4.5.0",
    "mongodb-build-info": "^1.2.0"
  },
  "optionalDependencies": {
    "mongodb-client-encryption": "^2.2.0-alpha.0"
  },
  "dependency-check": {
    "entries": [
      "src/**/*.js"
    ],
    "ignore": [
      "sinon",
      "chai",
      "uuid",
      "encoding"
    ]
  }
}
