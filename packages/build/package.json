{
  "name": "@mongosh/build",
  "version": "3.10.1",
  "private": true,
  "description": "MongoDB Shell Build Tools",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/mongosh.git"
  },
  "config": {
    "unsafe-perm": true
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "prepublish": "ppnpm run compile",
    "test": "mocha",
    "test-ci": "node ../../scripts/run-if-package-requested.js pnpm test",
    "test-coverage": "nyc --no-clean --cwd ../.. --reporter=none ppnpm run test",
    "test-ci-coverage": "nyc --no-clean --cwd ../.. --reporter=none ppnpm run test-ci",
    "eslint": "eslint",
    "lint": "ppnpm run eslint . && ppnpm run prettier -- --check .",
    "check": "ppnpm run lint",
    "evergreen-release": "ts-node -r ../../scripts/import-expansions.js src/index.ts",
    "release": "ts-node src/index.ts trigger-release",
    "prettier": "prettier",
    "bump": "ts-node src/index.ts bump",
    "publish": "ts-node src/index.ts publish",
    "bump-auxiliary": "ts-node src/index.ts bump --auxiliary",
    "publish-auxiliary": "ts-node src/index.ts publish --auxiliary",
    "reformat": "ppnpm run prettier -- --write . && ppnpm run eslint -- --fix",
    "update-cta": "ts-node src/index.ts update-cta"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.15.1"
  },
  "mongosh": {
    "unitTestsOnly": true
  },
  "devDependencies": {
    "@mongodb-js/eslint-config-mongosh": "^1.0.0",
    "@mongodb-js/prettier-config-devtools": "^1.0.1",
    "@mongodb-js/tsconfig-mongosh": "^1.0.0",
    "@types/command-exists": "^1.2.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/download": "^8.0.1",
    "@types/es-aggregate-error": "^1.0.2",
    "@types/node-fetch": "^2.6.4",
    "@types/rimraf": "^3.0.0",
    "@types/tar-fs": "^2.0.0",
    "@types/tmp": "^0.2.3",
    "cross-spawn": "^7.0.5",
    "eslint": "^7.25.0",
    "prettier": "^2.8.8",
    "sinon-chai": "^4.0.1",
    "yaml": "^2.3.1"
  },
  "dependencies": {
    "@mongodb-js/devtools-github-repo": "^1.4.2",
    "@mongodb-js/dl-center": "^1.6.4",
    "@mongodb-js/mongodb-downloader": "^1.1.7",
    "@mongodb-js/monorepo-tools": "^1.4.5",
    "@mongodb-js/signing-utils": "^0.5.6",
    "@octokit/rest": "^17.9.0",
    "ajv": "^8.17.1",
    "aws-sdk": "^2.674.0",
    "boxednode": "^3.0.0",
    "command-exists": "^1.2.9",
    "download": "^8.0.0",
    "es-aggregate-error": "^1.0.9",
    "nock": "^13.0.11",
    "node-fetch": "2.6.12",
    "pkg-up": "^3.1.0",
    "rimraf": "^3.0.2",
    "semver": "^7.5.3",
    "tar": "^7.5.4",
    "tar-fs": "^2.1.4",
    "tmp-promise": "^3.0.2"
  }
}
