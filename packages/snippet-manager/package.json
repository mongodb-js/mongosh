{
  "name": "@mongosh/snippet-manager",
  "version": "3.24.0",
  "description": "MongoDB Shell Snippet Manager",
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/mongodb-js/mongosh.git"
  },
  "config": {
    "unsafe-perm": true
  },
  "scripts": {
    "test": "mocha -r \"../../scripts/import-expansions.js\" --timeout 60000 -r ts-node/register --reporter \"../../configs/mocha-config-mongosh/reporter.ts\" \"./{src,lib}/**/*.spec.ts\"",
    "test-ci": "node ../../scripts/run-if-package-requested.js npm test",
    "test-coverage": "nyc --no-clean --cwd ../.. --reporter=none npm run test",
    "test-ci-coverage": "nyc --no-clean --cwd ../.. --reporter=none npm run test-ci",
    "eslint": "eslint",
    "lint": "npm run eslint . && npm run prettier -- --check .",
    "check": "npm run lint && npm run depcheck",
    "depcheck": "depcheck",
    "compile": "tsc -p tsconfig.json",
    "prepublish": "npm run compile",
    "prettier": "prettier",
    "reformat": "npm run prettier -- --write . && npm run eslint -- --fix"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.15.1"
  },
  "mongosh": {
    "unitTestsOnly": true
  },
  "dependencies": {
    "@mongodb-js/devtools-proxy-support": "^0.5.3",
    "@mongosh/errors": "2.4.4",
    "@mongosh/shell-api": "^3.24.0",
    "@mongosh/types": "^3.14.0",
    "bson": "^6.10.4",
    "cross-spawn": "^7.0.5",
    "escape-string-regexp": "^4.0.0",
    "zod": "^3.24.1",
    "tar": "^6.1.15"
  },
  "devDependencies": {
    "@mongodb-js/eslint-config-mongosh": "^1.0.0",
    "@mongodb-js/prettier-config-devtools": "^1.0.1",
    "@mongodb-js/tsconfig-mongosh": "^1.0.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/tar": "^4.0.4",
    "depcheck": "^1.4.7",
    "eslint": "^7.25.0",
    "nanobus": "^4.5.0",
    "prettier": "^2.8.8"
  }
}
