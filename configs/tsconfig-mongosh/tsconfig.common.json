{
  "compilerOptions": {
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "erasableSyntaxOnly": true,

    "declaration": true,
    "removeComments": true,
    "target": "es2018",
    "lib": ["es2019"],
    "module": "nodenext",
    "moduleResolution": "nodenext"
  }
}
